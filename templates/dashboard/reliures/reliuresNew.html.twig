{% extends 'baseConnect.html.twig' %}
{% block title %}Magasin{% endblock %}

{% block body %}

<div class="imprimante">
    <div class="container">
        <div class="row">
            <h1>Ajouter type de Reliures</h1>
        </div>
            {{form_start(form)}}
            
            <div class="form-groupe">
                {{ form_label(form.Name) }}
                {{ form_widget(form.Name) }}
                {{ form_errors(form.Name) }}
            </div>
            <div class="form-groupe">
                {{ form_label(form.Price) }}
                {{ form_widget(form.Price) }}
                {{ form_errors(form.Price) }}
            </div>
            <div class="button">
             <button type="submit" class="send">Enregister</button>
            
            </div>
            <div class="retourcontainer">
            <a href="{{ path('app_reliures') }}" class="retour">Retour</a>
            </div>
            {{form_end(form)}}
            
        
    </div>
</div>
{% endblock %}